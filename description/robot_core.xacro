<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

<material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <!--Base link-->


    <link name="base_link">
        
    </link>

    <!--Chassis link-->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>
    
    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.078"/>
            <geometry>
                <box size="0.241 0.195 0.2"/>
            </geometry>
        </visual>
    </link>

    <!--Right front Wheel -->


    <joint name="Right_Front_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Right_Front_wheel"/>
        <origin xyz="-0.075 0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Right_Front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>

    <!--Right Rear Wheel -->

    <joint name="Right_Rear_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Right_Rear_wheel"/>
        <origin xyz="0.075 0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Right_Rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!--Left front Wheel -->

<joint name="left_Front_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Left_Front_wheel"/>
        <origin xyz="-0.075 -0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Left_Front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>

   <!--Left Rear Wheel -->

    <joint name="Left_Rear_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="Left_Rear_wheel"/>
        <origin xyz="0.075 -0.109 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="Left_Rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0285" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

     <!--Caster Wheel Link-->

     <joint name="caster_wheel_link" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.0 0.0 -0.01"/>
     </joint>


     <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="orange"/>
        </visual>
        
     </link>
</robot>